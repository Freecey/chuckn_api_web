{% extends 'adminbase.html.twig' %}

{% block title %}Hello AdminController!{% endblock %}

{% block body %}
    <section>
        <h1 class="text-center mb-3">Hello {{ controller_name }}! âœ…</h1>
        <div class="row">
            <div class="col-2">MENU
                {% include 'admin/_part/_menu.html.twig' %}
            </div>
            <div class="col-10">
                {% for message in app.flashes('success') %}
                    <div class="alert alert-success d-flex align-items-center" role="alert">
                        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
                        <div>
                            {{ message }}
                        </div>
                    </div>
                {% endfor %}
                {% block adminmain %}{% endblock %}
            </div>
        </div>
    </section>
    <script>
        const divsAlert = document.querySelectorAll('.alert-success')
        setTimeout(hideElement, 5000) //milliseconds until timeout//
        function hideElement() {
            divsAlert.forEach(function (div, i) {
                div.remove();
            })
        }
    </script>
{% endblock %}
