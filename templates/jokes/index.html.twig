{% extends 'base.html.twig' %}

{% block title %}Toutes les Facts{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1 class="mb-4">Chuck Noris facts</h1>

    <div class="d-flex my-3">
        {{ knp_pagination_render(jokes) }}
    </div>

    {% for joke in jokes %}
        <div class="card bg-secondary text-light my-2">
            <div class="card-body">
                {{ joke.joke|raw }}
            </div>
            <div class="card-footer fs-6 row">
                <div class="col-6">
                    {% set  raterand = random(5) %}
                    {% for i in 0..4 %}
                        <i class="fa-solid fa-star" {{ ( i <= raterand) ? 'style="color: goldenrod"' : '' }}></i>
                    {% endfor %}
                </div>
                <div class="col-6 text-end">
                    <small>
                        report (soon)
                    </small>
                </div>
            </div>
        </div>
    {% endfor %}
    <div class="d-flex my-4">
        {{ knp_pagination_render(jokes) }}
    </div>

</div>
{% endblock %}
